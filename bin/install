#!/usr/bin/env ruby -Ilib

require 'fileutils'
require "yippee/sudome"

YIPPEE_ROOT   = File.expand_path("../../", __FILE__)
CONFIG_FILE   = File.join(YIPPEE_ROOT, "config/dns.conf")
RESOLVER_FILE = "/etc/resolver/yippee"

unless File.exist?(RESOLVER_FILE)
  puts "Copying MasqDNS resolver config to #{RESOLVER_FILE}"
  FileUtils.cp(CONFIG_FILE,RESOLVER_FILE)
end

puts "Thats all."
